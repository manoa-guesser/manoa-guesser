generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  role     Role    @default(USER)
  score    Int     @default(0)   // legacy field, still fine to keep
  username String? @unique

  // NEW: relation to multiple game scores
  scores   Score[]
}

model Score {
  id        Int      @id @default(autoincrement())
  value     Int
  createdAt DateTime @default(now())

  // relation back to user
  user     User   @relation(fields: [userId], references: [id])
  userId   Int
}

model Stuff {
  id        Int       @id @default(autoincrement())
  name      String
  quantity  Int
  condition Condition @default(good)
  owner     String
}

model Submission {
  id          Int              @id @default(autoincrement())
  imageUrl    String
  caption     String
  location    String
  submittedBy String
  createdAt   DateTime         @default(now())
  reportCount Int              @default(0)
  status      SubmissionStatus @default(PENDING)
  reporters   Json?
}

enum Role {
  USER
  ADMIN
}

enum Condition {
  excellent
  good
  fair
  poor
}

enum SubmissionStatus {
  PENDING
  APPROVED
  REJECTED
}